{% extends 'base.html.twig' %}

{% block title %}Choisir la méthode 2FA{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">

            <h2 class="text-2xl font-bold mb-6 text-center">Authentification à deux facteurs</h2>
            <p class="text-gray-600 mb-6 text-center">Veuillez choisir votre méthode d'authentification à deux facteurs préférée</p>

            <form method="post">
                <div class="flex flex-col gap-4 mb-6">

                    <!-- Option Email -->
                    <div>
                        <input type="radio" id="email" name="auth_method" value="email" class="sr-only peer">
                        <label for="email" class="flex p-5 bg-gray-50 border border-gray-300 rounded-lg cursor-pointer focus:outline-none hover:bg-gray-100 peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:border-transparent">
                            <div class="flex items-center">
                                <div class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-100 text-blue-500 mr-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                </div>
                                <div>
                                    <span class="block text-sm font-bold text-gray-800">Email</span>
                                    <span class="block text-xs text-gray-600">Recevez un code de vérification par email</span>
                                </div>
                            </div>
                        </label>
                    </div>

                    <!-- Option SMS -->
                    <div>
                        <input type="radio" id="sms" name="auth_method" value="sms" class="sr-only peer">
                        <label for="sms" class="flex p-5 bg-gray-50 border border-gray-300 rounded-lg cursor-pointer focus:outline-none hover:bg-gray-100 peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:border-transparent">
                            <div class="flex items-center">
                                <div class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-100 text-blue-500 mr-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                    </svg>
                                </div>
                                <div>
                                    <span class="block text-sm font-bold text-gray-800">SMS</span>
                                    <span class="block text-xs text-gray-600">Recevez un code de vérification par SMS</span>
                                </div>
                            </div>
                        </label>
                    </div>

                    <!-- Option TOTP (Google Authenticator) -->
                    <div>
                        <input type="radio" id="totp" name="auth_method" value="totp" class="sr-only peer">
                        <label for="totp" class="flex p-5 bg-gray-50 border border-gray-300 rounded-lg cursor-pointer focus:outline-none hover:bg-gray-100 peer-checked:ring-2 peer-checked:ring-blue-500 peer-checked:border-transparent">
                            <div class="flex items-center">
                                <div class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-100 text-blue-500 mr-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4" />
                                    </svg>
                                </div>
                                <div>
                                    <span class="block text-sm font-bold text-gray-800">Authenticator App</span>
                                    <span class="block text-xs text-gray-600">Utilisez Google Authenticator ou une application similaire</span>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>


                <div class="flex gap-4 justify-between">
                    <a href="#"
                       class="w-1/2 py-2 px-4 border border-gray-300 rounded-lg text-gray-700 text-center hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-300"
                    >
                        Annuler
                    </a>
                    <button type="submit"
                            class="w-1/2 bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                        Continuer
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}