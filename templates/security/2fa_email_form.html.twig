{% extends 'base.html.twig' %}

{% block title %}Authentification à deux facteurs{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">

            <h2 class="text-2xl font-bold mb-6 text-center">Code d'authentification</h2>
            <p class="text-gray-600 mb-6 text-center">
                Veuillez saisir votre code en fonction de la méthode d'authentification sélectionnée précédemment.
            </p>

            {% if error %}
                {{ component('Alert', {
                    message:  error.messageKey|trans(error.messageData, 'security'),
                    color: 'bg-red-400',
                    icon: 'warning'
                }) }}
            {% endif %}

            <form method="post">
                <div class="mb-6">
                    <label for="code" class="block text-sm font-medium text-gray-700 mb-2">Votre Code</label>
                    <input
                            type="text"
                            id="code"
                            name="code"
                            required
                            class="block w-full p-2.5 bg-gray-50 rounded-lg
                            border border-gray-300 text-gray-800 text-sm
                            focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                            placeholder="Entrez votre code"
                    >
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('two_factor') }}">

                <div class="flex gap-4 justify-between mt-8">
                    <a href="#"
                       class="w-1/2 py-2 px-4 border border-gray-300 rounded-lg text-gray-700 text-center hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-300"
                    >
                        Annuler
                    </a>
                    <button type="submit"
                            class="w-1/2 bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                        Envoyer
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}